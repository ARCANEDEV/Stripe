{
    "name":        "arcanedev/stripe",
    "description": "Stripe PHP Library",
    "keywords":    ["arcanedev", "stripe", "payment", "pay", "api", "library"],
    "homepage":    "https://github.com/ARCANEDEV/Stripe",
    "authors": [
        {
            "name":     "ARCANEDEV",
            "email":    "arcanedev.maroc@gmail.com",
            "homepage": "https://github.com/ARCANEDEV",
            "role":     "Developer"
        }
    ],
    "type":    "library",
    "license": "MIT",
    "require": {
        "php":             ">=5.4",
        "ext-curl":        "*",
        "ext-json":        "*",
        "ext-mbstring":    "*"
    },
    "require-dev": {
        "phpunit/phpcov":  "~2.0",
        "phpunit/phpunit": "~4.0|~5.0"
    },
    "autoload": {
        "psr-4": {
            "Arcanedev\\Stripe\\": "src/"
        },
        "files": [
            "requirements.php",
            "constants.php",
            "helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Arcanedev\\Stripe\\Tests\\": "tests/"
        }
    }
}
